<div id="header">
  <%= image_tag asset_path('bg.jpg'), id: 'logo' %>
  <div id="navbar" class="row">
    <ul id="nav" class="col-8">
      <li><%= link_to 'Animes', animes_path %></li>
      <li><%= link_to 'Genre', '#' %></li>
      <li><%= link_to 'About Us', about_path %></li>
      <li><%= link_to 'Contact Us', contact_path %></li>
    </ul>
    <div id="search" class="col-4">
      <%= form_tag search_animes_path do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search' %>
      <% end %>
    </div>
  </div>
</div>